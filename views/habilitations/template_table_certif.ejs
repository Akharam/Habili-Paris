<div class="row lien_row">
  <a href="#" class="col-10" id="d-cert-<%= element.ID_certif%>" data-toggle="modal" data-target="#desc-modal-<%= element.ID_certif%>">
    <div class="row mt-3">
      <div class="col-lg-6 col-sm-12 px-1">
        <p class="text-black"><span class="font-weight-bold"><%= element.nom_certif%></span> </p>
      </div>
      <div class="col-lg-3 col-sm-12 px-1">
        <p class="text-black"><span class="font-weight-bold">Durée de validité : </span><%= element.duree_valide%> an(s)</p>
      </div>
      <div class="col-lg-3 col-sm-12 px-1">
        <p class="text-black">
          <span class="font-weight-bold">Période de souplesse : </span>
          <%= element.Periode_souplesse%> mois
        </p>
      </div>
    </div>
  </a>
  <% if(typeof modifier != 'undefined' && modifier == 1){%>
  <div class="col-2">
    <div class="row">
          <a href="/certifications/modifier/<%= element.ID_certif%>"><img src="/img/crayon.png"></a>
          <a href="!#" class="deleteCertif" id="d-cert-<%= element.ID_certif%>" data-toggle="modal" data-target="#delete-modal"><img src="/img/poubelle.png"></a>
    </div>
  </div>
  <%}%>
</div>
