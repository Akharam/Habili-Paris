        if(lettre=="?"||lettre==","||lettre=="/"||lettre==";"||lettre=="."||lettre==":"||lettre=="!"||lettre=="*"||lettre=="_"||lettre=="@"||lettre=="%"||lettre=="#"||lettre=="+"||lettre=="="||lettre=="<"||lettre==">"||lettre=="&"||lettre=="$"||lettre=="("||lettre==")"||lettre=="["||lettre=="]"){
